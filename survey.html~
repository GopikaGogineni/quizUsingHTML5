<script>

function surveyInput(){
	var form = document.forms["survey"];	
	var comment = form["comm"].value;
	var cityList = form["cityList"].value;
	var roomNumber = form["roomNo"].value;
			
	if((comment == "") || (cityList == "") || (roomNumber == "")){
		alert("Fill the form or click 'Skip to get score'");
		return false;
	}else{
		return true;
	 }
}

function skip(){
	window.location.href="score.html";
}
</script>

